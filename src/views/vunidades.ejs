<%- include ('partials/_header') -%>
    <div class="container">
        <div class="row mt-5">
          <div class="col-md-7">
            <table class="table table-sm table-bordered table-hover">
              <thead>
                <tr>
                  <td>n°</td>
                  <td>n° Unidad</td>
                  <td>Modelo</td>
                  <td>Placas</td>
                  <td>Empleado</td>
                  <td>Editar</td>
                  <td>Eliminar</td>
                </tr>
              </thead>
              <tbody>
                <% if (data) { %>
        
                  <% for(var i = 0; i < data.length; i++) { %>
                  
                  <tr>
                    <td>
                      <%= data[i].Id_uni %>
                    </td>
                    <td><%= data[i].Num_uni %></td>
                    <td><%= data[i].Desc_uni %></td>
                    <td><%= data[i].Placas %></td>
                    <td><%= data[i].Id_emp %></td>
                    <td>
                      <a href="/update/<%= data[i].Id_uni %>" class="btn btn-sm btn-info">Edit</a>
                       </td>
                       <td>
                        <a href="/delete/<%= data[i].Id_uni %>" class="btn btn-sm btn-danger">Delete</a>
                       </td>
                  </tr>
        
                    <% } %>
        
                  <% } %>
              </tbody>
            </table>
          </div>
          <div class="col-md-5">
            <form action="/add" method="POST">
              <div class="form-group">
                <input type="number" name="Id_uni"  placeholder="Id de unidad" class="form-control"> 
              </div>
              <div class="form-group">
                <input type="number" name="Num_uni" placeholder="Numero" class="form-control"> 
              </div>
              <div class="form-group">
                <input type="text" name="Desc_uni" placeholder="Marca" class="form-control"> 
              </div>
              <div class="form-group">
                <input type="text" name="Placas" placeholder="Placas" class="form-control"> 
              </div>
              <div class="form-group">
                <input type="number" name="Id_emp" placeholder="Empleado" class="form-control"> 
              </div>
              <button type="submit" class="btn btn-primary">
                Agregar Unidad
              </button>
              </form>
        </div>
        </div>
    </div>
        
<%- include ('partials/_footer') -%>